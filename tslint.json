{
    "linterOptions": {
        "exclude": "**/*.json"
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "arrow-parens": false,
        "jsx-attribute-spacing": true,
        "jsx-expression-spacing": true,
        "jsx-no-braces-for-string-attributes": true,
        "max-classes-per-file": 2,
        "max-line-length": false,
        "member-ordering": false,
        "no-bitwise": false,
        "no-console": false,
        "no-empty": false,
        "no-for-in-array": true,
        "no-invalid-template-strings": true,
        "no-shadowed-variable": false,
        "no-unused-expression": [ true, "allow-fast-null-checks", "allow-new" ],
        "no-var-keyword": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "only-arrow-functions": false,
        "ordered-imports": false,
        "prefer-const": false,
        "prefer-for-of": false,
        "quotemark": false,
        "radix": false,
        "trailing-comma": false,
        "variable-name": false,
        "whitespace": [ true, "check-branch", "check-decl", "check-module", "check-operator", "check-rest-spread", "check-separator", "check-type", "check-typecast", "check-type-operator", "check-preblock" ]
    },
    "rules": {
        "array-type": false,
        "arrow-parens": false,
        "await-promise": [ true, "Client", "Request", "PromiseLike" ],
        "callable-types": false,
        "interface-name": false,
        "jsx-attribute-spacing": true,
        "jsx-expression-spacing": true,
        "jsx-no-braces-for-string-attributes": true,
        "max-classes-per-file": 2,
        "max-line-length": false,
        "member-access": false,
        "member-ordering": false,
        "no-bitwise": false,
        "no-console": false,
        "no-empty": false,
        "no-floating-promises": [ true, "Client", "PromiseLike" ],
        "no-for-in-array": true,
        "no-invalid-template-strings": true,
        "no-internal-module": false,
        "no-namespace": false,
        "no-return-await": false, // Disabled, no bugs found
        "no-shadowed-variable": false,
        "no-unsafe-any": true,
        "no-unused-expression": [ true, "allow-fast-null-checks", "allow-new" ],
        "no-unused-variable": [ true, "check-parameters" ],
        "no-var-keyword": false,
        "no-var-requires": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "only-arrow-functions": false,
        "ordered-imports": false,
        "prefer-const": false,
        "prefer-for-of": false,
        "quotemark": false,
        "radix": false,
        "trailing-comma": false,
        "variable-name": false,
        "whitespace": [ true, "check-branch", "check-decl", "check-module", "check-operator", "check-rest-spread", "check-separator", "check-type", "check-typecast", "check-type-operator", "check-preblock" ]
    },
    "rulesDirectory": [
        "./node_modules/tslint-misc-rules/rules"
    ]
}
